<?xml version="1.0" encoding="UTF-8"?>
<!--
    Descriptor for the Publishing Template. 
    
    Defines all the resources included in a template 
    (such as HTML page templates, CSS, JS, fonts, and transformation parameters).
-->
<publishing-template>
  
  <!-- 
    This information is displayed as the name of the template 
    in the transformation scenario dialog box.  
  -->
  <name>Webhelp New</name>
  
  <!-- 
    Optionally, you can include author information in the descriptor file. 
    It is displayed when the user hovers over the template in the transformation 
    scenario dialog box. 
    
    This information might be useful if users run into an issue or have 
    questions about a certain template. 
  -->
  <author>
    <name>Dariusz Dyszkiewicz</name>
    <email>dyszkiewicz@pm.me</email>
  </author>
  
  
  <webhelp>       
    <!--
    The tags section provides meta information about the template (such as layout type or color theme).
    -->
    <tags>
      <tag type="layout">tree</tag>
      <tag type="color">grey</tag>
      <tag type="color">light</tag>
    </tags>
    
    
    
    <!--
      The preview-image element is used to specify an image that will be displayed in the transformation scenario dialog box. 
      It provides a visual representation of the template to help the user select the right template.
    -->
    <preview-image file="img/preview.png"/>
    
    <!-- Resources like CSS, favicon, logo and others -->
    <resources>
      <!-- Main CSS file -->
      <css file="css/main_combined.css"/>
      <css file="css/theme-switch.css"/>
      <css file="css/search-in-header.css"/>
      <fileset>
        <include name="js/**"/>
      </fileset>
    </resources>
    <xslt>
      <extension file="xsl/move-search-in-header.xsl" id="com.oxygenxml.webhelp.xsl.createMainPage"/>
      <extension file="xsl/move-search-in-header.xsl" id="com.oxygenxml.webhelp.xsl.dita2webhelp"/>
      <extension file="xsl/move-search-in-header.xsl" id="com.oxygenxml.webhelp.xsl.createSearchPage"/>
    </xslt>
    
    <!--
      You can set one or more WebHelp transformation parameters in the descriptor file.
    -->
    <parameters>
      <parameter name="webhelp.show.main.page.tiles" value="yes"/>
      <parameter name="webhelp.show.main.page.toc" value="yes"/>
      <parameter name="webhelp.top.menu.activated.on.click" value="yes"/>
      <parameter name="webhelp.default.collection.type.sequence" value="yes"/>
      <parameter name="webhelp.publication.toc.links" value="all"/>
      <parameter name="webhelp.logo.image" value="img/background.png" type="filePath"/>
      <parameter name="webhelp.favicon" value="img/favicon.png" type="filePath"/>
    </parameters>
  </webhelp>
</publishing-template>
